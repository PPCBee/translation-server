h1 Translates

= render 'hierarchy', hierarchy: @hierarchy

= build_breadcumb(key_path_splitted)

table.table
  thead
    tr
      th Key
      th = locale
      th Locations
  tbody
    - @keys.each do |key|
      tr
        td
          = build_breadcumb(key.normalized_key)
        td
          = render 'translations/inline_form',
                   translation: Translation.resolve(key: key, locale: locale)
        td
          ul
            - key.images.each do |image|
              li
                = image.location
                = image.image_tag
